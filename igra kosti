import random
keep_going = True #игровой цикл
while keep_going: #выбор пяти случайных костей
    dice = [0,0,0,0,0] #создаем массив для 5 значений
    for i in range(5): #бросаем случайное число  1 - 6 для всех 5 костей
        dice[i] = random.randint(1,6)
    print("Вам выпало:", dice) #вывести значения 5 костей
    #проверка комбинации пяти, четырех или трех одинаковых костей, если все 5 одинаковы
    #то говорим Яцзы
    if dice[0] == dice[1] == dice[2] == dice[3] == dice[4]:
        print("Все одинаковые!")
    #четыре одинаковых - первые или последние четыре одинаковые
    elif (dice[0] == dice[1] == dice[2] == dice[3]) or (dice[1] == dice[2] == dice[3] == dice[4]):
        print("Четыре одинаковых!")
    # три одинаковых - первые три, три посередине или последние три одинаковые
    elif (dice[0] == dice[1] == dice[2]) or (dice[1] == dice[2] == dice[3]) or (dice[2] == dice[3] == dice[4]):
        print("Три одинаковых!")
    keep_going = (input("Нажмите [Enter] для продолжения, любую клавишу, чтобы выйти: ") == "")
